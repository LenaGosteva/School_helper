<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_task"
    android:layout_width="match_parent"
    android:background="@drawable/button"
    android:layout_marginHorizontal="15dp"
     android:layout_marginBottom="15dp"
    android:layout_marginTop="5dp"
    android:elevation="2dp"
    android:layout_height="90dp">
    <View
        android:layout_width="match_parent"
        android:minHeight="100dp"
        android:visibility="gone"
        android:id="@+id/curtain_for_completed_task_item"
        android:background="@color/curtain_for_completed_task_item"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_for_sb_adapter"
        android:layout_width="wrap_content"
android:layout_weight="1"
        android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_of_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/null_color"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="left"
                    android:hint="Name of task"
                    android:paddingHorizontal="20dp"
                    android:textFontWeight="300"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/comment_of_task"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/name_of_task"
                    android:layout_height="50dp"
                    android:hint="This is task"
                    android:layout_marginTop="5dp"
                    android:background="@color/null_color"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:textFontWeight="300"
                    android:textSize="12sp" />


            </RelativeLayout><View
        android:layout_width="3dp"
        android:background="@color/black"
        android:layout_marginVertical="5dp"
        android:id="@+id/task_color_chip"
        android:layout_height="match_parent"/>
        <CheckBox
            android:id="@+id/is_Completed"
            android:buttonTint="@color/medium_dark"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mega_panic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@drawable/icon_panic_full"/>
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:id="@+id/panic"
        android:background="@drawable/icon_panic_not_full"/>
</RelativeLayout>