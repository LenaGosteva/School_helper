<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_game"
    android:layout_width="match_parent"
     android:layout_marginBottom="5dp"
    android:background="@drawable/recycler_task"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_for_sb_adapter"
        android:layout_width="wrap_content"
android:layout_weight="1"
        android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_of_task"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/null_color"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="left"
                    android:hint="Name of task"
                    android:paddingHorizontal="20dp"
                    android:textFontWeight="300"
                    android:textSize="30dp" />
                <TextView
                    android:id="@+id/comment_of_task"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/name_of_task"
                    android:layout_height="50dp"
                    android:hint="This is task"
                    android:background="@color/null_color"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="left"
                    android:paddingHorizontal="20dp"
                    android:textFontWeight="300"
                    android:textSize="20dp" />


            </RelativeLayout>
        <CheckBox
            android:id="@+id/is_Completed"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>