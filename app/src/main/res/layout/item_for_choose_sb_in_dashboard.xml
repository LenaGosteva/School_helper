<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_in_sb_adapter"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:background="@drawable/item_to_chosing_task_in_dashboard"
        android:elevation="2dp"
        android:translationZ="5dp">


        <TextView
            android:id="@+id/name_of_subject_item_in_dashboard_choose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@color/null_color"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"

            android:hint="Subject"
            android:textFontWeight="300"
            android:textSize="20sp" />


    </RelativeLayout>
</RelativeLayout>