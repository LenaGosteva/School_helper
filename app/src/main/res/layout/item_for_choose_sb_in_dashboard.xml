<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rel_in_sb_adapter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:background="@drawable/item_to_chosing_task_in_dashboard"
        android:elevation="2dp"
        android:translationZ="5dp">


        <TextView
            android:id="@+id/name_of_subject_item_in_dashboard_choose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/null_color"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:hint="Subject"
            android:textFontWeight="300"
            android:textSize="20sp" />
<View
    android:layout_width="3dp"
    android:id="@+id/color_of_sb_in_layout_item_for_choose_sd_in_dashboard"
    android:layout_marginHorizontal="10dp"
    android:background="@color/black"
    android:layout_height="match_parent"/>

    </LinearLayout>
</RelativeLayout>