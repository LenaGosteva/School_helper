<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"



        android:id="@+id/rel_in_sb_adapter"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="100dp"

    android:layout_marginHorizontal="15dp"
    android:elevation="4dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/recycler_subjects"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_subject_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/null_color"
                android:fontFamily="sans-serif-thin"
                android:gravity="left"
                android:hint="Subject"
                android:paddingHorizontal="20dp"
                android:textFontWeight="300"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/describtion_of_subject_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_of_subject_item"
                android:background="@color/null_color"
                android:fontFamily="sans-serif-thin"
                android:gravity="left"
                android:hint="Describtion"
                android:paddingHorizontal="20dp"
                android:textFontWeight="300"
                android:textSize="15dp" />
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:id="@+id/color_chip_in_sb_adapter"
            android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:hint="43"
            android:id="@+id/count_of_tasks_in_item_sb"
            android:textSize="25sp"
            android:gravity="center"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:hint="задания"
            android:layout_height="match_parent" />
    </LinearLayout>
    </LinearLayout>