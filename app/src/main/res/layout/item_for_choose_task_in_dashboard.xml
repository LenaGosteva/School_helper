<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rel_in_task_dsh_adapter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item_to_chosing_task_in_dashboard"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:translationZ="5dp">


        <TextView
            android:id="@+id/name_of_task_item_in_dashboard_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/null_color"
android:layout_gravity="center_vertical"            android:fontFamily="sans-serif-thin"
            android:gravity="left"
            android:maxLength="9"
            android:hint="Task"
            android:textFontWeight="300"
            android:textSize="15sp" />
<View
    android:layout_width="3dp"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/c"/>
        <TextView
            android:id="@+id/subject_of_task_item_in_dashboard_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/null_color"
            android:fontFamily="sans-serif-thin"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:layout_weight="1"
            android:text="Geometry"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>